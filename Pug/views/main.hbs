{{> navbar}}

<div class="container mt-5">
    <div class="row text-center">
        <h2>Listado de productos</h2>
    </div>
    <div class="row mt-3">
        <div class="col col-lg-8 offset-lg-2">
            {{#if productList}}
                <table class="table align-middle mt-3">
                    <thead>
                        <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th class="text-end">Foto</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each productList}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>${{this.price}}</td>
                                <td><img class="float-end" src="{{this.thumbnail}}" alt=""></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <div class="alert alert-info text-center">No hay productos</div>
            {{/if}}
        </div>
    </div>
</div>