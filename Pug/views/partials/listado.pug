div(class="container mt-5")
    div( class="row text-center")
        h2 Listado de productos

    div(class="row mt-3")
        div(class="col col-lg-8 offset-lg-2")
            if productList
                table(class="table align-middle mt-3")
                    thead
                        tr
                            th Nombre
                            th Precio
                            th(class="text-end") Foto

                    tbody
                        each product in productList
                            tr
                                td #{product.name}
                                td $#{product.price}
                                td
                                    img(class="float-end" src=product.thumbnail alt="")
            else
                div(class="alert alert-info text-center") No hay productos